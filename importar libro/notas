se debe crear una funcion

let GetFiles=(Path,Name)=>

let
    Origen = Excel.Workbook(File.Contents(Path&Name), null, true),
    Tabla1_Table = Origen{[Item="Tabla1",Kind="Table"]}[Data],
    #"Tipo cambiado" = Table.TransformColumnTypes(Tabla1_Table,{{"nombre", type text}, {"apellido", type text}, {"apellido2", type text}})
in
    #"Tipo cambiado"

in GetFiles


